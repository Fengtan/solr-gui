# ----------------------------------------------------------------------------
# Sophie Start Up Batch script
#
# Required ENV vars:
# ------------------
#   JAVA_HOME - location of a JVM home dir
#
# Optional ENV vars
# -----------------
#   JAVACMD      - full path of the Java executable
#   SOPHIE_JAR   - location of Sophie's installed jar archive
#   SOPHIE_OPTS  - parameters passed to the JVM when running Sophie
#   SOPHIE_LOG4J - full path of a log4j config file
# ----------------------------------------------------------------------------

if [ -f /etc/sophierc ] ; then
  . /etc/sophierc
fi

if [ -f "$HOME/.sophierc" ] ; then
  . "$HOME/.sophierc"
fi

if [ -z "$SOPHIE_JAR" ] ; then
  SOPHIE_JAR="/usr/share/java/sophie.jar"
fi

if [ -z "$SOPHIE_LOG4J" ] ; then
  SOPHIE_LOG4J="/etc/sophie/log4j.properties"
fi

if [ -z "$JAVACMD" ] ; then
  if [ -n "$JAVA_HOME"  ] ; then
    if [ -x "$JAVA_HOME/jre/sh/java" ] ; then
      JAVACMD="$JAVA_HOME/jre/sh/java"
    else
      JAVACMD="$JAVA_HOME/bin/java"
    fi
  else
    JAVACMD="`which java`"
  fi
fi

if [ ! -x "$JAVACMD" ] ; then
  echo "Error: JAVA_HOME is not defined correctly."
  echo "  We cannot execute $JAVACMD"
  exit 1
fi

if [ -z "$JAVA_HOME" ] ; then
  echo "Warning: JAVA_HOME environment variable is not set."
fi

exec "$JAVACMD" $SOPHIE_OPTS -Dlog4j.configuration=file:"$SOPHIE_LOG4J" -jar "$SOPHIE_JAR"

